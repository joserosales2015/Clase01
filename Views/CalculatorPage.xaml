<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Clase01.ViewModels"
             x:Class="Clase01.Views.CalculatorPage"
             Title="Calculadora">
    <ContentPage.BindingContext>
        <local:CalculatorViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="1.5*, 2*, 2*, 2*, 2*, 2*" 
          ColumnDefinitions="*, *, *, *" 
          RowSpacing="16" ColumnSpacing="16"
          Padding="16"
          BackgroundColor="Black">

        <Label 
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
            Text="{Binding CurrentCalculation}"
            TextColor="White"
            FontSize="48"
            HorizontalTextAlignment="End"
            VerticalTextAlignment="Center"
            LineBreakMode="NoWrap"
            Padding="20" />

        <Button Text="AC" 
                FontFamily="Segoe UI"
                Grid.Row="1" Grid.Column="0" 
                BackgroundColor="#202020" TextColor="White" 
                FontSize="Medium"
                FontAttributes="Bold"
                Command="{Binding CommandOperation}" 
                CommandParameter="AC"
                CornerRadius="50"/>

        <Button Text="%" 
                FontFamily="Segoe UI"
                Grid.Row="1" Grid.Column="1" 
                BackgroundColor="#202020" TextColor="White" 
                FontSize="Medium"
                FontAttributes="Bold"
                Command="{Binding CommandOperation}" 
                CommandParameter="%" 
                CornerRadius="50"/>
        
        <Button Text="&#xE750;" 
                FontFamily="Segoe Fluent Icons"
                Grid.Row="1" Grid.Column="2" 
                BackgroundColor="#202020" TextColor="White" 
                FontSize="Large"
                FontAttributes="Bold"
                Command="{Binding CommandOperation}" 
                CommandParameter="DEL" 
                CornerRadius="50"/>

        <Button Text="÷" 
                FontFamily="Segoe UI"
                Grid.Row="1" Grid.Column="3" 
                BackgroundColor="#202020" TextColor="White" 
                FontSize="Large"
                FontAttributes="Bold"
                Command="{Binding CommandOperation}" 
                CommandParameter="÷" 
                CornerRadius="50"/>

        <Button Text="7" Grid.Row="2" Grid.Column="0" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="7" CornerRadius="50"/>
        <Button Text="8" Grid.Row="2" Grid.Column="1" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="8" CornerRadius="50"/>
        <Button Text="9" Grid.Row="2" Grid.Column="2" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="9" CornerRadius="50"/>
        <Button Text="×" FontFamily="Segoe UI" Grid.Row="2" Grid.Column="3" BackgroundColor="#202020" TextColor="White" FontSize="Large" FontAttributes="Bold" Command="{Binding CommandOperation}" CommandParameter="×" CornerRadius="50"/>

        <Button Text="4" Grid.Row="3" Grid.Column="0" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="4" CornerRadius="50"/>
        <Button Text="5" Grid.Row="3" Grid.Column="1" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="5" CornerRadius="50"/>
        <Button Text="6" Grid.Row="3" Grid.Column="2" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="6" CornerRadius="50"/>
        <Button Text="-" FontFamily="Segoe UI" Grid.Row="3" Grid.Column="3" BackgroundColor="#202020" TextColor="White" FontSize="Large" FontAttributes="Bold" Command="{Binding CommandOperation}" CommandParameter="-" CornerRadius="50"/>

        <Button Text="1" Grid.Row="4" Grid.Column="0" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="1" CornerRadius="50"/>
        <Button Text="2" Grid.Row="4" Grid.Column="1" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="2" CornerRadius="50"/>
        <Button Text="3" Grid.Row="4" Grid.Column="2" BackgroundColor="#404040" TextColor="White" FontSize="Large" Command="{Binding CommandNumber}" CommandParameter="3" CornerRadius="50"/>
        <Button Text="+" FontFamily="Segoe UI" Grid.Row="4" Grid.Column="3" BackgroundColor="#202020" TextColor="White" FontSize="Large" FontAttributes="Bold" Command="{Binding CommandOperation}" CommandParameter="+" CornerRadius="50"/>

        <Button Text="00" 
                Grid.Row="5" Grid.Column="0"
                BackgroundColor="#404040" TextColor="White" 
                FontSize="Large"
                Command="{Binding CommandNumber}" 
                CommandParameter="00" 
                CornerRadius="50"/>
        
        <Button Text="0" 
                Grid.Row="5" Grid.Column="1"
                BackgroundColor="#404040" TextColor="White" 
                FontSize="Large"
                Command="{Binding CommandNumber}" 
                CommandParameter="0" 
                CornerRadius="50"/>

        <Button Text="." 
                FontFamily="Segoe UI"
                Grid.Row="5" Grid.Column="2" 
                BackgroundColor="#404040" TextColor="White" 
                FontSize="Large"
                FontAttributes="Bold"
                Command="{Binding CommandNumber}" 
                CommandParameter="." 
                CornerRadius="50"/>

        <Button Text="=" 
                FontFamily="Segoe UI"
                Grid.Row="5" Grid.Column="3" 
                BackgroundColor="#FF9500" TextColor="White" 
                FontSize="Large"
                FontAttributes="Bold"
                Command="{Binding CommandOperation}" 
                CommandParameter="=" 
                CornerRadius="50"/>

    </Grid>
</ContentPage>