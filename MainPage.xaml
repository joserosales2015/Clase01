<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clase01.MainPage"
             Title="Suma Basica">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="12">
            <!--Entrada 1-->
            <Label
                Text="Ingrese el primer número:" 
                FontSize="Medium" />
            <Entry x:Name="TxtNumero1" 
                   Keyboard="Numeric" 
                   Placeholder="Número 1" />

            <!--Entrada 2-->
            <Label 
                Text="Ingrese el segundo número:" 
                FontSize="Medium" />
            <Entry x:Name="TxtNumero2" 
                   Keyboard="Numeric" 
                   Placeholder="Número 2" />

            <!--Resultado-->
            <Button x:Name="BtnSumar"
                Text="Sumar" 
                Clicked="BtnSumar_Clicked" />
            <Button x:Name="BtnRestar"
                Text="Restar" 
                Clicked="BtnRestar_Clicked" />
            <Button x:Name="BtnMultiplicar"
                Text="Multiplicar" 
                Clicked="BtnMultiplicar_Clicked" />
            <Button x:Name="BtnDividir"
                Text="Dividir" 
                Clicked="BtnDividir_Clicked" />
            <Label x:Name="LblResultado" 
                   Text="El resultado aparecerá aquí." 
                   FontSize="Medium" 
                    />
        </StackLayout>
    </ContentPage.Content>
   

</ContentPage>
